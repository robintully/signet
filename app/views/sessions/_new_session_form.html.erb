<%= form_tag "sign-in" do %>
  <%= label_tag :email_address %>
  <%= text_field_tag :email_address, nil, placeholder: "example@company.com" %><br>
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, placeholder: "Enter password" %><br>
  <%= submit_tag ("Log In"), class: "btn btn-default" %>
<% end %>